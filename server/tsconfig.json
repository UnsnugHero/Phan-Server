{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@server-util/*": ["./util/*"],
      "@server-routes/*": ["./routes/*"],
      "@server-models/*": ["./models/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/util/*.ts",
    "src/models/*.ts",
    "src/controllers/*.ts",
    "src/routers/*.ts"
  ]
}
